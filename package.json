{
  "name": "cka-exam-simulator",
  "version": "1.0.0",
  "description": "CKA (Certified Kubernetes Administrator) Exam Simulator with real kubectl terminal",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "cd client && npx vite --host 0.0.0.0",
    "build": "cd client && npx vite build",
    "start": "NODE_ENV=production node server/index.js",
    "cluster:setup": "bash scripts/setup-cluster.sh",
    "cluster:teardown": "bash scripts/teardown-cluster.sh",
    "cluster:reset": "bash scripts/reset-cluster.sh",
    "setup": "bash setup.sh"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.16.0",
    "node-pty": "^1.0.0",
    "cors": "^2.8.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
